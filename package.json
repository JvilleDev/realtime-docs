{
  "name": "realtime-docs-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd packages/backend && bun run dev",
    "dev:frontend": "cd packages/frontend && npm run dev",
    "build": "bun run build:backend && bun run build:frontend",
    "build:backend": "cd packages/backend && bun run build",
    "build:frontend": "cd packages/frontend && npm run build",
    "start": "cd packages/backend && bun run start",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.3.0"
}
